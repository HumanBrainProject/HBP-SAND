{
  "$id": "https://schema.hbp.eu/sand/0.1/elements/annotationFile.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Definition of an annotation file",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "@type": {
      "type": "string",
      "description": "Metadata node type (schema).",
      "const": "https://schema.hbp.eu/sands/AnnotationFile"
    },
    "@id": {
      "type": "string",
      "description": "Metadata node identifier.",
      "pattern": "sands/v0.1/core/annotationFile/([A-Za-z0-9_-]+).json"
    },
    "annotationFile": {
      "$ref": "https://raw.githubusercontent.com/HumanBrainProject/openMINDS/master/v1.0/definitions.json#definitions/CSCS_FILE",
      "description": "annotationFile"
    },
    "internalFileIdentifier": {
      "type": "string",
      "description": "internalFileIdentifier"
    }
  }
}
