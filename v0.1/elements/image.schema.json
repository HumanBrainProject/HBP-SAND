{
  "$id": "https://schema.hbp.eu/sands/0.1/elements/image.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "SANDS definition of an image",
  "type": "object",
  "additionalProperties": false,   
  "required": [
    "@type",
    "@id",
    "coordinateSpace",
    "definedIn"
  ],
  "properties": {
    "@type": {
      "type": "string",
      "description": "Metadata node type (schema).",
      "const": "https://schema.ebrains.eu/sands/Image"
    },
    "@id": {
      "type": "string",
      "description": "Metadata node identifier.",
      "pattern": "sands/core/coordinatespace/([A-Za-z0-9_-]+).json"
    },
    "coordinateSpace": {
      "$ref": "https://raw.githubusercontent.com/HumanBrainProject/SANDS/master/v0.1/definitions.json#definitions/COORDINATE_SPACE",
      "definition": "coordinateSpace description"
    },
    "definedIn":{
	  "type": "object",
	  "oneOf": [
	    {"$ref": "https://raw.githubusercontent.com/HumanBrainProject/openMINDS/master/v1.0/definitions.json#definitions/CSCS_FILE"},
	    {"$ref": "https://raw.githubusercontent.com/HumanBrainProject/openMINDS/master/v3.0/definitions.json#definitions/FILE_INSTANCE"}
	  ],
      "description": "File in which the image is defined."
    },
    "indexingParameters": {
      "$ref": "https://raw.githubusercontent.com/HumanBrainProject/SANDS/master/v0.1/definitions.json#definitions/INDEXING_PARAMETERS",
      "definition": "indexingParameters description"
    }	  
  }
}
