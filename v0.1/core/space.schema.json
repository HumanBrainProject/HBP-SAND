{
  "$id": "https://schema.hbp.eu/sand/0.1/core/space.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Definition of a coordinate space",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "origin": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 2,
      "maxItems": 3,
      "exclusiveMinimum": 0
    },
    "axis": {
      "type": "array",
      "item": {
        "enum": [
          "x",
          "y",
          "z"
        ]
      },
      "minItems": 2,
      "maxItems": 3,
      "uniqueItems": true
    },
    "spacing": {
      "type": "object",
      "properties": {
        "sizes": {
          "type": "array",
          "items": {
            "type": "number",
            "exclusiveMinimum": 0
          },
          "minItems": 2,
          "maxItems": 3
        },
        "units": {
          "type": "array",
          "items": {
            "enum": [
              "um",
              "mm",
              "cm",
              "dm"
            ]
          },
          "minItems": 2,
          "maxItems": 3
        }
      }
    },
    "uniqueId": {
      "type": "string",
      "title": "Unique ID",
      "description": "A unique identifier for the coordinate space."
    },
    "version": {
      "type": "string",
      "title": "Version",
      "description": "Version string of the coordinate space."
    }
  }
}
