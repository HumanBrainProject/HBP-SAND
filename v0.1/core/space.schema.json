{
  "$id": "https://schema.hbp.eu/sand/0.1/core/space.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Definition of a coordinate space",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "directions": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "items": {
        "type": "array",
        "minItems": 3,
        "maxItems": 3,
        "items": {
          "type": "number"
        }
      }
    },
    "neurological_convention": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "items": {
        "type": "string"
      }
    },
    "origin": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "items": {
        "type": "number"
      }
    },
    "unit": {
      "type": "string",
      "enum": [
        "um",
        "mm",
        "cm",
        "dm"
      ]
    },
    "uniqueId": {
      "type": "string",
      "title": "Unique ID",
      "description": "A unique identifier for the coordinate space."
    },
    "version": {
      "type": "string",
      "title": "Version",
      "description": "Version string of the coordinate space."
    }
  }
}
