{
  "$id": "https://schema.hbp.eu/sand/0.1/core/reference_space.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Definition of a reference space",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "directions": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "items": {
        "type": "array",
        "minItems": 3,
        "maxItems": 3,
        "items": {
          "type": "number"
        }
      }
    },
    "unit": {
      "type": "string",
      "enum": [
        "um",
        "mm",
        "cm",
        "dm"
      ]
    }
  }
}
