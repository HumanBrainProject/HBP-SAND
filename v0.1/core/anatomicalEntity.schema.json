{
  "$id": "https://schema.hbp.eu/sands/0.1/core/anatomicalEntity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Definition of an anatomicalEntity",
  "type": "object",
  "additionalProperties": false,   
  "required": [
    "@type",
    "@id",
    "nameOfLocation"
  ],
  "properties": {
    "@type": {
      "type": "string",
      "description": "Metadata node type (schema).",
      "const": "https://schema.hbp.eu/sands/AnatomicalEntity"
    },
    "@id": {
      "type": "string",
      "description": "Metadata node identifier.",
      "pattern": "sands/v0.1/core/anatomicalEntity/([A-Za-z0-9_-]+).json"
    },    
    "laterality": {
      "type": "array",
      "description": "The side of the body or bilateral organ that this anatomical entity relates to.",
      "items": {
        "$ref": "https://raw.githubusercontent.com/HumanBrainProject/SANDS/master/v0.1/definitions.json#definitions/CONTROLLED_TERM"
      },
      "maxItems": 2
    },
    "nameOfLocation": {
      "type": "string",
      "description": "The name of the anatomical entity."
    },
    "parentStructure": {
      "type": "object",
      "description": "A parent structure to this anatomical entity.",
      "$ref": "https://raw.githubusercontent.com/HumanBrainProject/SANDS/master/v0.1/definitions.json#definitions/ANNATOMICAL_ENTITY"
    },
    "source": {
      "type": "object",
      "description": "Terminology the anatomical entity originates from.",
      "$ref": "https://raw.githubusercontent.com/HumanBrainProject/SANDS/master/v0.1/definitions.json#definitions/TERMINOLOGY"        
    },
      "relatedOntology": {
      "type": "object",
      "description": "Related onotlogy to the anatomical entity (link to individual ontology ID).",
      "$ref": "https://raw.githubusercontent.com/HumanBrainProject/SANDS/master/v0.1/definitions.json#definitions/CONTROLLED_TERM"
    }
  }
}
