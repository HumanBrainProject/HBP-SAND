{
  "$id": "https://schema.hbp.eu/sand/0.1/core/annotation.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Definition of an annotation",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "@type": {
      "type": "string",
      "description": "Metadata node type (schema).",
      "const": "https://schema.ebrains.eu/sands/Annotation"
    },
    "@id": {
      "type": "string",
      "description": "Metadata node identifier.",
      "pattern": "sands/core/annotation/([A-Za-z0-9_-]+).json"
    },
    "performedBy": {
      "$ref": "https://schema.hbp.eu/minds3.0/core/person.schema.json",
      "description": "Person that performed the annotation."
    },
    "anatomicalEntity": {
      "$ref": "https://schema.hbp.eu/sands/core/anatomicalEntity.schema.json",
      "description": "anatomicalEntity that is defined with annotation."
    },
    "annotationType": {
      "type": "string",
    },
    "version": {
      "type": "string",
      "description": "Version"
    },
    "releaseDate": {
      "type": "string",
      "format": "date-time",
      "description": "Date and time of release"
    },
    "relatedOntology": {
      "$ref": "https://raw.githubusercontent.com/FZJ-INM1-BDA/SANDS-internal/master/v0.1/core/coordinatespace.schema.json#definitions/RELATED_ONTOLOGY",
      "description": "relatedOntology"
    },
    "anatomicalTerm": {
      "$ref": "sands/anatomicaldefinition|openminds/anatomicalattribution",
      "description": "anatomicalTerm"
    },
    "criteriaType": {
      "$ref": "https://raw.githubusercontent.com/FZJ-INM1-BDA/SANDS-internal/master/v0.1/core/definitions.schema.json#definitions/CONTROLLED_TERM",
      "description": "criteriaType"
    },
    "criteria": {
      "$ref": "https://raw.githubusercontent.com/HumanBrainProject/openMINDS/master/v1.0/definitions.json#definitions/EXPERIMENT_PROTOCOL",
      "description": "criteria"
    },
    "inspiredBy": {
      "$ref": "https://raw.githubusercontent.com/HumanBrainProject/openMINDS/master/v1.0/definitions.json#definitions/CSCS_FILE",
      "description": "inspiredBy"
    },
    "definingFile": {
      "$ref": "https://raw.githubusercontent.com/HumanBrainProject/openMINDS/master/v1.0/definitions.json#definitions/CSCS_FILE",
      "description": "definedIn"
    },
    "internalFileIdentifier": {
      "type": "string",
      "description": "internalFileIdentifier"
    },
    "navigationCoordinates": {
      "$ref": "https://raw.githubusercontent.com/FZJ-INM1-BDA/SANDS-internal/master/v0.1/core/definitions.schema.json#definitions/COORDINATES",
      "description": "navigationCoordinates"
    },
    "annotationType": {
      "$ref": "https://raw.githubusercontent.com/FZJ-INM1-BDA/SANDS-internal/master/v0.1/core/definitions.schema.json#definitions/CONTROLLED_TERM",
      "description": "annotationType"
    },
    "parentAnnotation": {
      "$ref": "TODO",
      "description": "parentAnnotation"
    },
    "supportedByEBRAINS": {
      "type": "boolean",
      "description": "Supported by atlas viewer"
    }
  }
}
