{
  "$id": "https://schema.hbp.eu/sand/0.1/core/coordinateSpace.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Definition of a coordinate space",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "@type",
    "@id",
    "alias",
    "axes",
    "fullName",
    "releaseDate",
    "versionIdentifier"
  ],
  "properties": {
    "@type": {
      "type": "string",
      "description": "Metadata node type (schema).",
      "const": "https://schema.ebrains.eu/sands/CoordinateSpace"
    },
    "@id": {
      "type": "string",
      "description": "Metadata node identifier (id).",
      "pattern": "sands/core/coordinatespace/([A-Za-z0-9_-]+).json"
    },
    "alias": {
      "type": "string",
      "description": "User-defined identifier, often a short name, of this coordinate space."
    },
    "axes": {
      "description": "Link to axes that are presented in the coordinate space."
      "$ref": "https://raw.githubusercontent.com/HumanBrainProject/SANDS/master/v0.1/definitions.json#definitions/AXES",
    },
    "defaultImages": {
      "type": "array",
      "description": "Link to default images used to visualize this brain atlas coordinate space.",
      "items": {
        "$ref": "https://raw.githubusercontent.com/HumanBrainProject/SANDS/master/v0.1/definitions.json#definitions/IMAGE",
      }
    },
    "fullName": {
      "type": "string",
      "description": "A descriptive name of this coordinate space."
    },
    "relatedOntology": {
      "type": "string",
      "description": "Link (uri) to related ontological term.",
      "format": "uri"
    },
    "releaseDate": {
      "type": "string",
      "format": "date",
      "description": "Date of first broadcast/publication/release of this coordinate space."
    },
    "versionIdentifier": {
      "type": "string",
      "description": "Version identifier of this coordinate space."
    }
  }
}
