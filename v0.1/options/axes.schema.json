{
  "$id": "https://schema.hbp.eu/sands/0.1/options/axes.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Description of spatial axes",
  "type": "object",
  "additionalProperties": false,   
  "required": [
    "@type",
    "@id",
    "anatomicalOrientation",
    "origin",
    "unit"
  ],
  "properties": {
    "@type": {
      "type": "string",
      "description": "Metadata node type (schema).",
      "const": "https://schema.ebrains.eu/sands/Axes"
    },
    "@id": {
      "type": "string",
      "description": "Metadata node identifier.",
      "pattern": "sands/options/axes/([A-Za-z0-9_-]+).json"
    },
    "anatomicalOrientation": {
      "$ref": "https://raw.githubusercontent.com/HumanBrainProject/SANDS/master/v0.1/definitions.json#definitions/CONTROLLED_TERM",
      "description": "Axes orientation denoted in standard anatomical terms of location."
    },
    "origin": {
      "type": "array",
      "description": "Center of the corodinate system (point where axes intersect).",
      "items": {
        "type": "number"
      },
      "minItems": 3,
      "maxItems": 3
    },
    "unit": {
      "$ref": "https://raw.githubusercontent.com/HumanBrainProject/SANDS/master/v0.1/definitions.json#definitions/CONTROLLED_TERM",
      "description": "Standard measure that is used to describe the axes."
    }
  }
}
