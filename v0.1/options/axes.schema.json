{
  "$id": "https://openminds.ebrains.eu/sands/axes.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Structured information describing spatial axes.",
  "type": "object",
  "additionalProperties": false,   
  "required": [
    "@type",
    "@id",
    "anatomicalOrientation",
    "origin",
    "unit"
  ],
  "properties": {
    "@type": {
      "type": "string",
      "description": "Metadata node type (schema).",
      "const": "https://openminds.ebrains.eu/sands/axes"
    },
    "@id": {
      "type": "string",
      "description": "Metadata node identifier."
    },
    "anatomicalOrientation": {
      "description": "Axes orientation denoted in standard anatomical terms of location.",
      "$ref": "https://raw.githubusercontent.com/HumanBrainProject/SANDS/master/v0.1/definitions.json#definitions/CONTROLLED_TERM"
    },
    "origin": {
      "type": "array",
      "description": "Center of the corodinate system (point where axes intersect).",
      "items": {
        "type": "number"
      },
      "minItems": 3,
      "maxItems": 3
    },
    "unit": {
      "description": "A determinate quantity adopted as a standard of the measurement.",
      "$ref": "https://raw.githubusercontent.com/HumanBrainProject/SANDS/master/v0.1/definitions.json#definitions/CONTROLLED_TERM"
    }
  }
}
