{
  "$id": "https://schema.hbp.eu/sand/0.1/core/axes.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Description of spatial axes",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "@type": {
      "type": "string",
      "description": "Metadata node type (schema).",
      "const": "https://schema.ebrains.eu/sands/Axes"
    },
    "@id": {
      "type": "string",
      "description": "Metadata node identifier.",
      "pattern": "sands/options/axes/([A-Za-z0-9_-]+).json"
    },
    "origin": {
      "$ref": "https://raw.githubusercontent.com/FZJ-INM1-BDA/SANDS-internal/master/v0.1/core/definitions.schema.json#definitions/ORIGIN",
      "description": "origin"
    },
    "units": {
      "$ref": "https://raw.githubusercontent.com/FZJ-INM1-BDA/SANDS-internal/master/v0.1/core/definitions.schema.json#definitions/UNITS"
    },
    "directions": {},
    "anatomicalLabels": {},
    "indexingParameters": {}
  }
}
