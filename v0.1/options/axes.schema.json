{
  "$id": "https://schema.hbp.eu/sand/0.1/options/axes.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Description of spatial axes",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "@type": {
      "type": "string",
      "description": "Metadata node type (schema).",
      "const": "https://schema.ebrains.eu/sands/Axes"
    },
    "@id": {
      "type": "string",
      "description": "Metadata node identifier.",
      "pattern": "sands/options/axes/([A-Za-z0-9_-]+).json"
    },
    "origin": {
      "$ref": "https://raw.githubusercontent.com/HumanBrainProject/SANDS/master/v0.1/definitions.json#definitions/CONTROLLED_TERM",
      "description": "origin"
    },
    "units": {
      "$ref": "https://raw.githubusercontent.com/HumanBrainProject/SANDS/master/v0.1/definitions.json#definitions/CONTROLLED_TERM",
      "description": "units"
    },
    "directions": {
      "$ref": "https://raw.githubusercontent.com/HumanBrainProject/SANDS/master/v0.1/definitions.json#definitions/CONTROLLED_TERM",
      "description": "directions"
    },
    "anatomicalLabels": {
      "$ref": "https://raw.githubusercontent.com/HumanBrainProject/SANDS/master/v0.1/definitions.json#definitions/CONTROLLED_TERM",
      "description": "anatomicalLabels"
    },
    "indexingParameters": {
      "$ref": "https://raw.githubusercontent.com/HumanBrainProject/SANDS/master/v0.1/definitions.json#definitions/INDEXING_PARAMETERS",
      "description": "indexingParameters"
    }
  }
}
