{
  "$id": "https://openminds.ebrains.eu/sands/indexingParameters.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Structured information describing the indexing parameters for spatial axes",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "@type",
    "@id",
    "axesMax",
    "axesMin",
    "steps",
    "unit"
  ],
  "properties": {
    "@type": {
      "type": "string",
      "description": "Metadata node type (schema).",
      "const": "https://openminds.ebrains.eu/sands/indexingParameters",
    "@id":{
      "type": "string",
      "description": "Metadata node identifier."
    },
    "axesMax": {
      "type": "array",
      "description": "Maximum length of each axis.",
      "items": {
        "type": "number"
      },
      "minItems": 3,
      "maxItems": 3
    },
    "axesMin": {
      "type": "array",
      "description": "Minimum length of each axis.",
      "items": {
        "type": "number"
      },
      "minItems": 3,
      "maxItems": 3
    },
    "steps": {
      "type": "array",
      "description": "Length of one step along each axis.",
      "items": {
        "type": "number"
      },
      "minItems": 3,
      "maxItems": 3
    },
    "unit": {
      "description": "A determinate quantity adopted as a standard of the measurement.",
      "$ref": "https://raw.githubusercontent.com/HumanBrainProject/SANDS/master/v0.1/definitions.json#definitions/CONTROLLED_TERM"
    }
  }
}
